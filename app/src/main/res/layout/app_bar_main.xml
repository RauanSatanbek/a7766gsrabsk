<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/MainContainer"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/dark_blue">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:logo="@drawable/ic_logo"
            app:title="@string/app_name"
            app:titleMarginStart="32dp"
            app:logoDescription="@string/app_name"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/listOfSongs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mediaPlayerContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Hello World!"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"/>-->


    <android.support.constraint.ConstraintLayout
            android:id="@+id/mediaPlayerContainer"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:elevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <!--android:background="@drawable/media_rounded_bg"-->

        <com.gauravk.audiovisualizer.visualizer.BlastVisualizer
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mVisualizer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:avDensity="0.8"
                custom:avType="fill"
                custom:avColor="#F22CEA"
                custom:avSpeed="normal"
                android:visibility="visible"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:thumb="@drawable/thumb"
                android:progressTint="#FFF"
                android:layout_marginTop="8dp"
                android:elevation="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
                android:id="@+id/refreshBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_refresh"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toStartOf="@+id/prevBtn"/>

        <ImageButton
                android:id="@+id/refreshOneBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_refresh_one"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:saveEnabled="false"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toStartOf="@+id/prevBtn"/>

        <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_prev"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:paddingTop="14dp"
                android:paddingRight="16dp"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn"
                app:layout_constraintEnd_toEndOf="@id/playBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_play"
                android:paddingRight="18dp"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:paddingLeft="22dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/pauseBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_pause"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:saveEnabled="false"
                android:elevation="16dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_next"
                android:paddingTop="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/playBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <ImageButton
                android:id="@+id/shuffleBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_shuffle"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nextBtn"
                android:layout_marginStart="24dp"/>
        <ImageButton
                android:id="@+id/shuffleBtnActive"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_shuffle_active"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:saveEnabled="false"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nextBtn"
                android:layout_marginStart="24dp"/>
        <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <!--</android.support.v7.widget.CardView>-->

</android.support.constraint.ConstraintLayout>

